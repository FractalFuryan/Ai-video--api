# Harmony√ò4 Geometry Generator - Production Environment
# Copy to production.env and configure with secure values

# Database Configuration
POSTGRES_USER=harmony
POSTGRES_PASSWORD=CHANGEME_GENERATE_WITH_openssl_rand_hex_32
POSTGRES_DB=harmony4
DATABASE_URL=postgresql://harmony:CHANGEME@db/harmony4

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
JWT_SECRET=CHANGEME_GENERATE_WITH_openssl_rand_hex_64
API_KEY_SALT=CHANGEME_GENERATE_WITH_openssl_rand_hex_32
GEOMETRY_SEED=CHANGEME_GENERATE_WITH_openssl_rand_hex_16

# Application Features
GEOMETRY_GENERATION_ENABLED=true
ETHICS_STRICT_MODE=true
MAX_TOKENS_PER_REQUEST=1000
MAX_ANIMATION_DURATION=60

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:8080
ALLOWED_METHODS=GET,POST,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Monitoring & Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Performance
WORKER_COUNT=4
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# Container Storage
CONTAINER_STORAGE_PATH=/app/storage/containers
MAX_CONTAINER_SIZE=52428800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
